{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "typeRoots": ["./node_modules/@types","../node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["../src/*"]
    },
    "skipLibCheck": true,
  },
  "references": [{ "path": "../tsconfig.shared.json" }],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.tsx", "../src/**/*.test.tsx"]
}
