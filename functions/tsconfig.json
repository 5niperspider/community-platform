{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
